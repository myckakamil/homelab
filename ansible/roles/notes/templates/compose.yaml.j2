services:
  excalidraw:
    container_name: excalidraw
    image: excalidraw/excalidraw:latest
    ports:
      - "3030:80"
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.excalidraw.entrypoints=http-external"
      - "traefik.http.routers.excalidraw.rule=Host(`excalidraw.{{ zone_name }}`)"
      - "traefik.http.middlewares.excalidraw-https-redirect.redirectscheme.scheme=https-external"
      - "traefik.http.routers.excalidraw.middlewares=excalidraw-https-redirect"
      - "traefik.http.routers.excalidraw.middlewares=secured@file"
      - "traefik.http.routers.excalidraw-secure.entrypoints=https-external"
      - "traefik.http.routers.excalidraw-secure.rule=Host(`excalidraw.{{ zone_name }}`)"
      - "traefik.http.routers.excalidraw-secure.tls=true"
      - "traefik.http.routers.excalidraw-secure.service=excalidraw"
      - "traefik.http.routers.excalidraw-secure.middlewares=secured@file"
      - "traefik.http.services.excalidraw.loadbalancer.server.port=80"
      - "traefik.docker.network=proxy"
    networks:
      - proxy

networks:
  proxy:
    external: true